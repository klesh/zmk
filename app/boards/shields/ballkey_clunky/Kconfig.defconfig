# 第二个 Kconfig 文件：设定 shield 的配置项及默认值

if SHIELD_BALLKEY_CLUNKY # 有 if 判断，说明所有的 Kconfig 都会被遍历加载

config ZMK_KEYBOARD_NAME
    default "Ballkey Clunky"

if ZMK_DISPLAY

config I2C
    default y

config SSD1306
    default y

endif # ZMK_DISPLAY

if LVGL

config LV_Z_VDB_SIZE
    default 64

config LV_DPI_DEF
    default 148

config LV_Z_BITS_PER_PIXEL
    default 1

choice LV_COLOR_DEPTH
    default LV_COLOR_DEPTH_1
endchoice

endif # LVGL


endif